<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F172A">

    <!-- Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0F172A"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back to Subject"
            android:textColor="#6366F1"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Submission Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2563EB"
        android:padding="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtSubmissionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 1: Functions"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtTaskCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIZ"
            android:textColor="#E0E7FF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Task Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E293B"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <!-- Due Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date:"
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-12-15 11:59 PM"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtSubmitStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Submitted"
                android:textColor="#FBBF24"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtLateStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • Late"
                android:textColor="#EF4444"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Attempts Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attempts:"
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtAttempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 3"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Grade Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade:"
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Graded"
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Instructions Section Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#0F172A"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0F172A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Instructions Text -->
            <TextView
                android:id="@+id/txtInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete the quiz on functions and loops. Make sure to submit your answers before the due date."
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <!-- Attachable Tab Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Submission"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- File Upload Container -->
            <LinearLayout
                android:id="@+id/uploadContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1E293B"
                android:padding="24dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⬆"
                    android:textSize="40sp"
                    android:textColor="#64748B"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click to upload or drag and drop"
                    android:textColor="#94A3B8"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documents, Images, Videos, PDFs, Links"
                    android:textColor="#64748B"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Attached Files Container -->
            <LinearLayout
                android:id="@+id/attachedFilesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <!-- Attached files will be added here dynamically -->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0F172A"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⬆ Submit Assignment"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2563EB"
            android:padding="16dp"/>
    </LinearLayout>

</LinearLayout>