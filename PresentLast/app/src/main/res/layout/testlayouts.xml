<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1F1F1F">

    <!-- INBOX header layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2563EB"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/placeholder"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="INBOX"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btnCompose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_add"
            android:contentDescription="Compose"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Scrollable Messages List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1F1F1F">

        <LinearLayout
            android:id="@+id/messagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sample Message Item (This will be dynamically generated) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2D2D2D"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSenderName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="John Doe"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 AM"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtRecentMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hey, did you submit the assignment?"
                    android:textColor="#D1D5DB"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Add more message items dynamically -->

        </LinearLayout>
    </ScrollView>

    <!-- Fixed bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2D2D2D"
        android:paddingVertical="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="3"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2563EB"/>
    </LinearLayout>

</LinearLayout>