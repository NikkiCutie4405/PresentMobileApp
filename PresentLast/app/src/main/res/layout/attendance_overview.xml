<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F172A">

    <!-- Header with Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2563EB"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/placeholder"
            android:contentDescription="Logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance Overview"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your attendance across all subjects"
                android:textColor="#E0E7FF"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Overall Stats Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E293B"
        android:padding="20dp"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Attendance"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtOverallAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="92%"
                android:textColor="#10B981"
                android:textSize="48sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="24dp">

                <TextView
                    android:id="@+id/txtPresentDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present: 92 days (100%)"
                    android:textColor="#10B981"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtLateDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Late: 0 days (50%)"
                    android:textColor="#FFA500"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/txtAbsentDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent: 8 days (0%)"
                    android:textColor="#EF4444"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/txtTotalDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: 100 days"
                    android:textColor="#94A3B8"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Overall Grade Display -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#334155"
            android:layout_marginVertical="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Attendance Grade:"
                android:textColor="#94A3B8"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtOverallGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall Grade: 92.0%"
                android:textColor="#10B981"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Grade Legend -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:background="#0F172A"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ“ Present\n100%"
                android:textColor="#10B981"
                android:textSize="11sp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš  Late\n50%"
                android:textColor="#FFA500"
                android:textSize="11sp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ— Absent\n0%"
                android:textColor="#EF4444"
                android:textSize="11sp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Subjects Section Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subjects Attendance"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="#0F172A"/>

    <!-- Scrollable Subjects List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0F172A">

        <LinearLayout
            android:id="@+id/subjectsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Subject activity_subject_attendance cards will be added dynamically here -->

        </LinearLayout>
    </ScrollView>

    <!-- Fixed bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2D2D2D"
        android:paddingVertical="8dp">
        <Button
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ "
            android:textColor="#9CA3AF"
            android:backgroundTint="#2D2D2D"/>


        <Button
            android:id="@+id/course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“š"
            android:textColor="#9CA3AF"
            android:backgroundTint="#2D2D2D"/>
        <Button
            android:id="@+id/scanButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:text="ðŸ“·"
            android:textSize="30dp"
            android:textColor="#9CA3AF"
            android:backgroundTint="#F59E0B"/>
        <Button
            android:id="@+id/Grades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“Š"
            android:textColor="#9CA3AF"
            android:backgroundTint="#2D2D2D"/>

        <Button
            android:id="@+id/attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“…"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2563EB"/>
    </LinearLayout>

</LinearLayout>