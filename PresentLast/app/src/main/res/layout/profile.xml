<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0F172A"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â† Back"
                android:textColor="#6366F1"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2563EB"
            android:padding="32dp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <!-- Profile Icon -->
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ðŸ‘¤"
                android:textSize="48sp"
                android:gravity="center"
                android:background="#1E3A8A"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- SDFR2 - User Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juan Dela Cruz"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="#1E293B"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- First Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juan"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="#1E293B"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Middle Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Name"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtMiddleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Santos"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="#1E293B"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Surname -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surname"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dela Cruz"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="#1E293B"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Student Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Email"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtStudentEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="student@school.edu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="#1E293B"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BSCS 3-A"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="#1E293B"
                android:padding="16dp"
                android:layout_marginBottom="32dp"/>

            <!-- SDFR3 - Change Password Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ Change Password"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2563EB"
                android:padding="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>