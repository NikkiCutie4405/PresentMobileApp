<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <include
        android:id="@+id/layoutCourseHeader"
        layout="@layout/layout_part_course_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnJoinSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“± Join Session!"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#10B981"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutCourseHeader" />

    <include
        android:id="@+id/layoutCourseTabs"
        layout="@layout/layout_part_course_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnJoinSession" />

    <LinearLayout
        android:id="@+id/layoutBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#0F172A"
        app:layout_constraintTop_toBottomOf="@id/layoutCourseTabs"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tasks &amp; Assignments"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="#0F172A"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:indeterminateTint="#2563EB" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0F172A"
            android:clipToPadding="false"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/tasksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>