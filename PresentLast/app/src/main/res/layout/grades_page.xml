<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F172A">

    <!-- Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0F172A"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back"
            android:textColor="#6366F1"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Course Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2563EB"
        android:padding="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Structures"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtCourseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS 201 â€¢ Dr. Maria Santos"
            android:textColor="#E0E7FF"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Tab Navigation with Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1E293B"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/tabContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“„ Content"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="8dp"/>

        <TextView
            android:id="@+id/tabAttendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ• Attendance"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="8dp"/>

        <TextView
            android:id="@+id/tabGrades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“Š Grades"
            android:textColor="#6366F1"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="8dp"/>

    </LinearLayout>

    <!-- Grades Section Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grade Records"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="#0F172A"/>

    <!-- Scrollable Grades List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0F172A">

        <LinearLayout
            android:id="@+id/gradesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Grade items will be added dynamically here -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>